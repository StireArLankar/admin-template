{
	"name": "admin-template",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "concurrently -p name -c \"yellow,blue\" -n \"server,client\" \"yarn dev:server\" \"yarn dev:client\"",
		"dev:client": "vite --host",
		"dev:server": "ts-node-dev -r tsconfig-paths/register --project ./src/server/tsconfig.json --respawn --transpile-only ./src/server/index.ts",
		"build": "yarn build:client && yarn build:server",
		"build:client": "vite build",
		"build:server": "yarn build:esbuild",
		"start": "node ./build/server.js",
		"generate:devops": "ts-node-dev --project ./tsconfig.schema.json --transpile-only ./src/server/config/devops.generate.ts",
		"postgenerate:devops": "prettier --write ./src/server/config/devops.schema.json",
		"build:esbuild": "ts-node-dev -r tsconfig-paths/register --project ./src/server/tsconfig.json --transpile-only ./esbuild.ts",
		"prepare": "is-ci || yarn prepare:husky",
		"prepare:husky": "husky install && chmod +x .husky/*",
		"docker:test": "docker build -t=admin-template . && docker run --rm admin-template",
		"typecheck": "yarn tsc && yarn tsc --project src/server/tsconfig.json",
		"postinstall": "yarn generate:prisma && is-ci || typewind generate",
		"studio": "prisma studio",
		"seed": "ts-node-dev --project ./tsconfig.schema.json --transpile-only prisma/seed.ts",
		"generate:prisma": "prisma generate",
		"postgenerate:prisma": "eslint ./src/common/generated --fix",
		"prisma:init": "npx prisma migrate dev --name init"
	},
	"dependencies": {
		"@prisma/client": "^4.11.0",
		"@radix-ui/react-accordion": "^1.1.0",
		"@radix-ui/react-menubar": "^1.0.0",
		"@radix-ui/react-scroll-area": "^1.0.2",
		"@radix-ui/react-select": "^1.2.0",
		"@radix-ui/react-tabs": "^1.0.2",
		"@radix-ui/react-tooltip": "^1.0.4",
		"@tanstack/react-query": "^4.24.10",
		"@tanstack/react-router": "^0.0.1-beta.83",
		"@tanstack/react-table": "^8.7.9",
		"@tanstack/table-core": "^8.7.9",
		"@trpc/client": "^10.14.0",
		"@trpc/react-query": "^10.14.0",
		"@trpc/server": "^10.14.0",
		"@types/react": "^18.0.28",
		"@types/react-dom": "^18.0.11",
		"chalk": "^4",
		"colord": "^2.9.3",
		"copy-to-clipboard": "^3.3.3",
		"cors": "^2.8.5",
		"date-fns": "^2.29.3",
		"date-fns-tz": "^2.0.0",
		"dotenv": "^16.0.3",
		"express": "^4.18.2",
		"express-session": "^1.17.3",
		"js-yaml": "^4.1.0",
		"lucide-react": "^0.115.0",
		"next-themes": "^0.2.1",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-hook-form": "^7.43.4",
		"referrer-policy": "^1.2.0",
		"store2": "^2.14.2",
		"superjson": "^1.12.2",
		"tailwind-variants": "^0.0.30",
		"transitory": "^2.2.0",
		"trpc-openapi": "^1.1.2",
		"url-parse": "^1.5.10",
		"use-debounce": "^9.0.3",
		"ws": "^8.12.1",
		"zod": "^3.21.0",
		"zod-prisma-types": "^2.3.4",
		"zustand": "^4.3.5"
	},
	"devDependencies": {
		"@faker-js/faker": "^7.6.0",
		"@types/cors": "^2.8.13",
		"@types/express": "^4.17.17",
		"@types/express-session": "^1.17.6",
		"@types/js-yaml": "^4.0.5",
		"@types/node": "18.14.6",
		"@types/url-parse": "^1.4.8",
		"@types/ws": "^8.5.4",
		"@typescript-eslint/eslint-plugin": "^5.54.0",
		"@typescript-eslint/parser": "^5.54.0",
		"@typescript-eslint/typescript-estree": "^5.54.0",
		"@vitejs/plugin-react": "^3.1.0",
		"autoprefixer": "^10.4.13",
		"concurrently": "^7.6.0",
		"cross-env": "^7.0.3",
		"esbuild": "^0.17.11",
		"eslint": "^8.35.0",
		"eslint-config-prettier": "^8.6.0",
		"eslint-config-react-app": "^7.0.1",
		"eslint-plugin-flowtype": "^8.0.3",
		"eslint-plugin-import": "^2.27.5",
		"eslint-plugin-jest": "^27.2.1",
		"eslint-plugin-jsx-a11y": "^6.7.1",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-react": "^7.32.2",
