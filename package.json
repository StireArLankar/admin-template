		"eslint-plugin-testing-library": "^5.10.2",
		"husky": "^8.0.3",
		"is-ci": "^3.0.1",
		"lint-staged": "^13.1.2",
		"postcss": "^8.4.21",
		"prettier": "^2.8.4",
		"prisma": "^4.11.0",
		"tailwindcss": "^3.2.7",
		"tailwindcss-animate": "^1.0.5",
		"ts-node": "^10.9.1",
		"ts-node-dev": "^2.0.0",
		"tsconfig-paths": "^4.1.2",
		"tw-colors": "^1.1.6",
		"typescript": "^4.9.5",
		"typewind": "^0.0.20",
		"vite": "^4.1.4",
		"vite-plugin-parse-html": "^2.0.0",
		"vite-plugin-svgr": "^2.4.0",
		"vite-tsconfig-paths": "^4.0.5",
		"zod-to-json-schema": "^3.20.4"
	},
	"lint-staged": {
		"src/**/*.{css,scss,md,json}": "prettier --write",
		"src/**/*.{js,jsx,ts,tsx}": "eslint --fix"
	},
	"resolutions": {
		"@types/node": "18.14.6"
	}
}
